#include <stdio.h>

void printXYZ(int x, int y, int z);
void enterXYZ(int* ptrX, int* ptrY, int* ptrZ);
void swap(int* a, int* b);
void xyzAscending(int* px, int* py, int* pz);

int main() {
    int x = 1;
    int y = 2;
    int z = 3;

    printXYZ(x, y, z);
    enterXYZ(&x, &y, &z);
    printXYZ(x, y, z);
    xyzAscending(&x, &y, &z);
    printXYZ(x, y, z);
    return 0;
}

void printXYZ(int x, int y, int z) {
    printf("x: %d, y: %d, z: %d\n", x, y, z);
}

void enterXYZ(int* ptrX, int* ptrY, int* ptrZ) {
    printf("Enter the integer values for X: ");
    int x_scan = scanf("%d", ptrX);
    while(x_scan != 1) {
        printf("Not a valid value. Try again: ");
        x_scan = scanf("%d", ptrX);
    }
    scanf("%*[^\n]");
    
    printf("Enter the integer values for Y: ");
    int y_scan = scanf("%d", ptrY);
    while(y_scan != 1) {
        printf("Not a valid value. Try again: ");
        y_scan = scanf("%d", ptrY);
    }
    scanf("%*[^\n]");
    
    printf("Enter the integer values for Z: ");
    int z_scan = scanf("%d", ptrZ);
    while(z_scan != 1) {
        printf("Not a valid value. Try again: ");
        z_scan = scanf("%d", ptrZ);
    }
    scanf("%*[^\n]");
}

void swap(int* a, int* b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

void xyzAscending(int* px, int* py, int* pz) {
    if(*px > *py) {
        swap(px, py);
    }
    if(*py > *pz) {
        swap(py, pz);
    }
    if(*px > *py) {
        swap(px, py);
    }
}

